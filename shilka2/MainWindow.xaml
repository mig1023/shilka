<Window x:Class="shilka2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:shilka2"
        mc:Ignorable="d"
        Title="Shilka Anti-aircraft" Height="350" Width="525" MouseLeftButtonDown="Window_MouseLeftButtonDown" MouseLeftButtonUp="Window_MouseLeftButtonUp" MouseMove="Window_MouseMove" Closing="Window_Closing">
    <Grid x:Name="gridFirePlace">
        <Canvas x:Name="firePlace" Margin="0,-50,0,50" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="closeButton" Content="X" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" VerticalAlignment="Top" Width="30" Click="closeButton_Click"/>
        <Label x:Name="label" Content="Label" HorizontalAlignment="Left" Height="29" Margin="228,33,0,0" VerticalAlignment="Top" Width="50"/>
        <Image x:Name="ShilkaImg" HorizontalAlignment="Left" Height="98" Margin="28,56,0,0" VerticalAlignment="Top" Width="182" Source="images/shilka.png"/>
    </Grid>
</Window>
